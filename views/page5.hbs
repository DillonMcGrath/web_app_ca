<!DOCTYPE html>
<html>
<head>
  <title>Available Cars</title>
  <style>
    /* General page styling */
    body {
      background-color: #1a1a1a;
      color: #f0f0f0;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }

    /* Center the main heading */
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    /* Center the main content within a max-width container */
    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    /* Filter form styling */
    form {
      text-align: center;
      margin-bottom: 20px;
    }
    input {
      margin-right: 10px;
      padding: 6px;
      border: 1px solid #444;
      border-radius: 4px;
      background-color: #333;
      color: #f0f0f0;
    }
    button {
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      background-color: #6c63ff;
      color: #fff;
      cursor: pointer;
    }
    button:hover {
      background-color: #5a52dd;
    }

    /* Brand name styling (clickable) */
    .brand-name {
      cursor: pointer;
      display: block;
      background-color: #333;
      padding: 10px;
      margin-top: 5px;
      border-radius: 4px;
      text-decoration: none;
      color: #f0f0f0;
    }
    .brand-name:hover {
      background-color: #444;
    }

    /* Hide model list by default with .hidden */
    .hidden {
      display: none;
    }

    /* Basic list styling for models */
    ul {
      list-style-type: none;
      margin: 0;
      padding-left: 20px; /* Indent model items */
    }
    li {
      margin: 5px 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Available Cars</h1>

    <!-- Filter Form -->
    <form method="GET" action="/page5">
      <input type="text" name="year" placeholder="Filter by Year" value="{{selectedYear}}">
      <input type="text" name="model" placeholder="Filter by Model" value="{{selectedModel}}">
      <input type="text" name="price" placeholder="Max Price" value="{{selectedPrice}}">
      <button type="submit">Search</button>
    </form>

    <!-- Display Brands and Their Models -->
    {{#each brands}}
      <div>
        <!-- Clickable brand name toggles its model list -->
        <div class="brand-name" onclick="toggleModels('{{@index}}')">
          {{name}}
        </div>
        <!-- Model list (initially hidden) -->
        <ul id="models-{{@index}}" class="hidden">
          {{#each models}}
            <li>
              <strong>{{year}} - {{name}}</strong> - {{price}}<br>
              {{description}}
            </li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>

  <script>
    // Toggles the display of models for a given brand
    function toggleModels(index) {
      const list = document.getElementById("models-" + index);
      list.classList.toggle("hidden");
    }
  </script>
</body>
</html>
